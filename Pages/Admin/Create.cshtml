@page
@model SNACKIS___Webb.Pages.Admin.CreateModel
@{
}

<h1>Skapa kategori</h1>

<form method="post">
    <div class="form-group">
        <label for="title">Titel</label><br />
        <input class="form-control" autocomplete="off" name="title" /><br />
    </div>
    <div class="form-group">
        <label for="description">Beskrivning</label><br />
        <input class="form-control" autocomplete="off" name="description" /><br />
    </div>
    <div class="row">
        <input class="btn btn-success" type="submit" value="Skapa kategori"/>
        <a asp-page="Index" class="btn btn-info">Tillbaka</a>
    </div>
</form>


@if (!String.IsNullOrEmpty(Model.Messasge))
{
    <h5 style="color : green">@Model.Messasge</h5>
}
