@page
@model SNACKIS___Webb.Pages.Auth.RegisterPageModel
@{
}


<div class="container h-100">
    <div class="row h-100">
        <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
            <div class="d-table-cell align-middle">

                <div class="text-center mt-4">
                    <h1 class="h2">Registrering</h1>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="m-sm-4">
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="NewUser.FullName">Namn</label>
                                    <input class="form-control form-control-lg" asp-for="NewUser.FullName" placeholder="Skriv in ditt namn">
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewUser.Username">Användarnamn</label>
                                    <input class="form-control form-control-lg" asp-for="NewUser.Username" placeholder="Användarnamn">
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewUser.Password">Lösenord</label>
                                    <input class="form-control form-control-lg" asp-for="NewUser.Password" placeholder="Lösenord">
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewUser.Email">Mejl</label>
                                    <input class="form-control form-control-lg" asp-for="NewUser.Email" placeholder="Mejl">
                                </div>
                                <div class="form-group ">
                                    <label>Välj bild</label>
                                    <input asp-for="UploadFile" class="form-control border-0 bg-light" type="file" />
                                    <span asp-validation-for="UploadFile" class="text-danger"></span>
                                </div>
                                <div class="text-center mt-3">
                                    <input type="submit" value="Registrera" class="btn btn-primary" />
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>