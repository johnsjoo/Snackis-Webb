@page
@model SNACKIS___Webb.Pages.Auth.RegisterPageModel
@{
}

<head>
    <link rel="stylesheet" href="~/css/RegisterStyling.css" />
</head>

<div class="container h-100">
    <div class="row h-100">
        <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
            <div class="d-table-cell align-middle">

                
                <div class="card">
                    <div class="text-center mt-4">
                        <h2 class="h2">Registrering</h2>
                    </div>
                    <div class="card-body">
                        <div class="m-sm-4">
                            <form method="post" enctype="multipart/form-data">
                                @if (!string.IsNullOrEmpty(Model.IncompleteUnserInfo))
                                {
                                    <p class="alert-danger" role="alert">@Model.IncompleteUnserInfo</p>
                                }
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="NewUser.FullName">Namn</label>
                                    <input autocomplete="off" type="text" class="form-control form-control-lg" asp-for="NewUser.FullName" placeholder="Skriv in ditt namn">
                                    <span asp-validation-for="NewUser.FullName" class="text-danger"></span>
                                   
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewUser.Username">Användarnamn</label>
                                    <input autocomplete="off" class="form-control form-control-lg" asp-for="NewUser.Username" placeholder="Användarnamn">
                                    <span asp-validation-for="NewUser.Username" class="text-danger"></span>
                                    @if (!string.IsNullOrEmpty(Model.UserNameMessage))
                                    {
                                        <p class="text-danger">@Model.UserNameMessage</p>
                                    }
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewUser.Password">Lösenord</label>
                                    <input autocomplete="off" class="form-control form-control-lg" type="password" asp-for="NewUser.Password" placeholder="Lösenord">
                                    <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewUser.Email">Mejl</label>
                                    <input autocomplete="off" type="email" class="form-control form-control-lg" asp-for="NewUser.Email" placeholder="Mejl">
                                    <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                                    @if (!string.IsNullOrEmpty(Model.MessageMail))
                                    {
                                        <p class="text-danger">@Model.MessageMail</p>
                                    }
                                </div>
                                <div class="form-group ">
                                    <label>Välj profilbildbild</label>
                                    <input asp-for="UploadFile" class="form-control border-0 bg-light" type="file" />
                                    <span asp-validation-for="UploadFile" class="text-danger"></span>
                                </div>

                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" id="switch1" class="custom-control-input" name="c1" onclick="showMe('div1')">
                                    <label class="custom-control-label" for="switch1">Du godkänner härmed behandlingen av dina personuppgifter.</label>
                                </div>

                                <script>
                                    window.onload = function () {
                                        document.getElementById("div1").style.display = 'none';

                                    }

                                    function showMe(box) {
                                        var chboxs = document.getElementsByName("c1");
                                        var vis = "none";

                                        for (var i = 0; i < chboxs.length; i++) {
                                            if (chboxs[i].checked) {
                                                vis = "block";
                                                break;
                                            }
                                        }
                                        document.getElementById(box).style.display = vis;
                                    }
                                </script>



                                <div id="div1">
                                    <div class="text-center mt-3">
                                        <input type="submit" value="Registrera" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>