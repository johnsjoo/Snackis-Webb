@page
@model SNACKIS___Webb.Pages.NewPostViewModel
@{
}

<head>
    <link href="~/css/NewPostStyling.css" rel="stylesheet" />
</head>

<h1>Skapa tråd i kategorin @Model.CurrerntCategory.Title</h1>
<form asp-page-handler="Post">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group" style="visibility: hidden">
    <input asp-for="NewCatId" class="form-control" value="@Model.NewCatId" />
    <span asp-validation-for="NewPost.CategoryId" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Titel</label>
    <input asp-for="NewPost.Title" class="form-control" autocomplete="off" />
    <span asp-validation-for="NewPost.Title" class="text-danger"></span>
</div>
<button class="btn btn-info" type="submit">Skapa tråd</button>
</form>